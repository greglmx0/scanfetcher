FROM alpine:latest

WORKDIR /app

RUN apk add --no-cache curl

RUN addgroup -g 1001 -S appuser && \
    adduser -S appuser -u 1001 -G appuser

# Create data directory and set permissions
RUN mkdir -p /app/data && \
    chown -R appuser:appuser /app

# Expect a prebuilt binary to be copied in by the deployment process
COPY scanfetcher /app/scanfetcher
RUN chown appuser:appuser /app/scanfetcher && chmod +x /app/scanfetcher

USER appuser

EXPOSE 8080

CMD ["/app/scanfetcher"]
